<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Quản trị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        header {
            width: 100%;
        }

        .admin-nav .nav-link {
            color: white !important;
            transition: background-color 0.2s ease;
        }

            .admin-nav .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <!-- HEADER FULL WIDTH -->
    <header class="p-3 bg-dark text-white w-100">
        <div class="d-flex justify-content-between align-items-center px-4">
            <h2 class="m-0">Khu vực quản trị</h2>
            <div>
                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="text-white me-2">Trang quản trị</a> |
                <a href="@Url.Action("Logout", "Users", new { area = "Admin" })" class="text-white ms-2">Đăng xuất</a>
            </div>
        </div>
    </header>

    <!-- NAVIGATION MENU -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary admin-nav">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Người dùng</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">Danh mục</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Transactions" asp-action="Index">Giao dịch</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Reports" asp-action="Index">Báo cáo</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Reviews" asp-action="Index">Đánh giá</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="PaymentMethods" asp-action="Index">Thanh toán</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="SystemNotifications" asp-action="Index">Thông báo</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Về trang người dùng</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN FULL WIDTH -->
    <main class="container-fluid mt-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
