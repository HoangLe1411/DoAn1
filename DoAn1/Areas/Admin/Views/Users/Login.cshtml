@model DoAn1.Areas.Admin.Models.User
@{
    ViewData["Title"] = "Đăng nhập quản trị";
    // Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* CSS giữ nguyên như bạn đã viết */
    body {
        background: #f0f2f5;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    form {
        background: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 350px;
        display: flex;
        flex-direction: column;
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #333;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: #555;
            display: block;
            margin-bottom: 8px;
        }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1.5px solid #ccc;
        border-radius: 6px;
        font-size: 15px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0,123,255,0.5);
        }

    .btn-primary {
        width: 100%;
        padding: 12px 0;
        font-size: 16px;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .alert-danger {
        background-color: #f8d7da;
        color: #842029;
        padding: 12px 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-weight: 600;
        text-align: center;
    }
    /* Nút quay lại giao diện người dùng */
    .btn-back-user {
        display: block;
        margin-top: 20px;
        width: 100%;
        padding: 12px 0;
        font-size: 15px;
        font-weight: 600;
        color: #555;
        background-color: #e2e6ea;
        border: 2px solid #ccc;
        border-radius: 6px;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-back-user:hover {
            background-color: #ced4da;
            border-color: #adb5bd;
            color: #212529;
            text-decoration: none;
            cursor: pointer;
        }

</style>

<form method="post">
    <h2>Đăng nhập quản trị viên</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="form-group">
        <label>Tên đăng nhập</label>
        <input type="text" name="username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Mật khẩu</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Đăng nhập</button>

    <!-- Nút quay lại -->
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-back-user">Quay lại giao diện người dùng</a>
</form>
