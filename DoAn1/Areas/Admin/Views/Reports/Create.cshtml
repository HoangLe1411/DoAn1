                <label asp-for="ReporterId" class="control-label"></label>
                <select asp-for="ReporterId" class ="form-control" asp-items="ViewBag.ReporterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReportedUserId" class="control-label"></label>
                <select asp-for="ReportedUserId" class ="form-control" asp-items="ViewBag.ReportedUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
