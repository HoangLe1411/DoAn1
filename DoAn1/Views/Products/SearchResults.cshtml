@model List<DoAn1.Areas.Admin.Models.Product>

<style>
    .product-img {
        height: 200px;
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s ease-in-out;
        border-radius: 10px;
    }

        .card:hover {
            transform: scale(1.03);
        }
</style>

<h2 class="mb-4">🔍 Kết quả tìm kiếm</h2>

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm nào.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ProductImages.FirstOrDefault()?.ImageUrl"
                         class="card-img-top product-img"
                         alt="@item.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@item.Title</h5>
                        <p class="card-text text-danger fw-bold">
                            @item.Price?.ToString("N0") VNĐ
                        </p>
                        <a href="@Url.Action("DetailProduct", "Products", new { id = item.ProductId })"
                           class="btn btn-primary mt-auto">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
