@model List<DoAn1.Areas.Admin.Models.Product>

@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2>🛒 Giỏ hàng của bạn</h2>

<form asp-controller="Products" asp-action="OrderSelected" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Chọn</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedProductIds" value="@item.ProductId" /></td>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">🛍 Đặt hàng</button>
</form>
