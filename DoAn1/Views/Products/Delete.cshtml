@model DoAn1.Areas.Admin.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3 text-danger">Xóa sản phẩm</h2>

<div class="card border-danger shadow-sm">
    <div class="card-header bg-danger text-white">
        <strong>Bạn có chắc chắn muốn xóa sản phẩm này?</strong>
    </div>
    <div class="card-body row">
        <div class="col-md-4">
            @{
                var imageUrl = Model.ProductImages?.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png";
            }
            <img src="@imageUrl" class="img-fluid border rounded" alt="Hình ảnh sản phẩm" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@Model.Price?.ToString("N0") VNĐ</dd>

                <dt class="col-sm-4">Tình trạng</dt>
                <dd class="col-sm-8">@Model.Condition</dd>

                <dt class="col-sm-4">Thương hiệu</dt>
                <dd class="col-sm-8">@Model.Brand</dd>

                <dt class="col-sm-4">Địa điểm</dt>
                <dd class="col-sm-8">@Model.Location</dd>

                <dt class="col-sm-4">Đã bán</dt>
                <dd class="col-sm-8">@((Model.IsSold == true) ? "Có" : "Chưa")</dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">@Model.Status</dd>

                <dt class="col-sm-4">Bảo hành</dt>
                <dd class="col-sm-8">@Model.WarrantyPeriod tháng</dd>

                <dt class="col-sm-4">Đã dùng</dt>
                <dd class="col-sm-8">@Model.UsedDuration tháng</dd>

                <dt class="col-sm-4">Phân loại</dt>
                <dd class="col-sm-8">@Model.Type</dd>
            </dl>

            <div class="mt-4">
                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                    Xác nhận xóa
                </button>
                <a asp-action="MyProducts" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.Title</strong>? Thao tác này không thể hoàn tác.
                    <input type="hidden" asp-for="ProductId" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
