@model List<DoAn1.Areas.Admin.Models.Wishlist>

@{
    ViewData["Title"] = "Sản phẩm yêu thích";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wishlist-container">
    <h2 class="text-center my-4">
        <span style="color:red;">❤️</span>
        <span class="fw-bold text-primary">Sản phẩm yêu thích</span>
    </h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 d-flex flex-column p-3">
                    <div class="card-body d-flex flex-column flex-grow-1">
                        <h5 class="card-title text-truncate">@item.Product?.Title</h5>
                        <p class="card-text text-muted" style="font-size:0.9rem; min-height:60px;">
                            @item.Product?.Description
                        </p>
                        <p class="fw-bold text-danger">
                            @item.Product?.Price?.ToString("N0") VNĐ
                        </p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="@Url.Action("DetailProduct", "Products", new { id = item.ProductId })"
                               class="btn btn-outline-primary btn-sm">
                                🔍 Xem chi tiết
                            </a>
                            <form asp-action="RemoveFromWishlist" asp-controller="Wishlists" method="post">
                                <input type="hidden" name="wishlistId" value="@item.WishlistId" />
                                <button type="submit" class="btn btn-danger btn-sm">🗑 Xoá</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .wishlist-container .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .wishlist-container .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .wishlist-container .card-title {
        font-weight: 600;
        font-size: 1.1rem;
        min-height: 45px;
    }

    .wishlist-container .card-text {
        flex-grow: 1;
    }

    .wishlist-container .btn {
        min-width: 100px;
    }
</style>
