@model DoAn1.Areas.Admin.Models.User

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-circle"></i> Thông tin tài khoản</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Tên đăng nhập</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">
                    @if (Model.Role == "Admin")
                    {
                        <span class="badge bg-danger">Quản trị viên</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Người dùng</span>
                    }
                </dd>

                <dt class="col-sm-3">Điểm uy tín</dt>
                <dd class="col-sm-9">@Model.ReputationScore</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive == true)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Bị khóa</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
