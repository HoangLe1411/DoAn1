@model DoAn1.Areas.Admin.Models.User

@{
    ViewData["Title"] = "Đăng nhập";
    ViewData["ShowHeader"] = false;
    ViewData["ShowNavbar"] = false;
    ViewData["ShowFooter"] = false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Nền chung cho login/register */
        body {
            background-image: url('/images/nendangnhap.png'); /* Thay bằng ảnh nền phù hợp */
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
        }

        /* Bao khung form */
        .auth-container {
            background-color: rgba(255, 255, 255, 0.95);
            max-width: 400px;
            margin: 60px auto;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        .auth-container h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
        }

        .auth-container .form-control {
            border-radius: 8px;
            padding: 10px 12px;
        }

        .auth-container button {
            border-radius: 8px;
            padding: 10px;
            font-weight: 500;
        }

        .auth-container .alert {
            border-radius: 8px;
        }

        .auth-container a {
            color: #0d6efd;
            text-decoration: none;
        }

        .auth-container a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="auth-container">
    <h2>Đăng nhập</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @if (TempData["LoginMessage"] != null)
    {
        <div class="alert alert-warning text-center">@TempData["LoginMessage"]</div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập hoặc Email</label>
            <input type="text" name="Username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input type="password" name="Password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Register">Chưa có tài khoản? Đăng ký</a>
    </div>
    <div class="mt-2 text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-info">Quay về trang chủ</a>
    </div>
</div>
