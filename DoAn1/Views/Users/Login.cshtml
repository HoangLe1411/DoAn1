@model DoAn1.Areas.Admin.Models.User

@{
    ViewData["Title"] = "Đăng nhập";
    ViewData["ShowHeader"] = false;
    ViewData["ShowNavbar"] = false;
    ViewData["ShowFooter"] = false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Đăng nhập</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @if (TempData["LoginMessage"] != null)
    {
        <div class="alert alert-warning text-center">@TempData["LoginMessage"]</div>
    }


    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập hoặc Email</label>
            <input type="text" name="Username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input type="password" name="Password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Register">Chưa có tài khoản? Đăng ký</a>
    </div>
</div>
