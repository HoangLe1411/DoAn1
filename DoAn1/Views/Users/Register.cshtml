@model DoAn1.Areas.Admin.Models.User

@{
    ViewData["Title"] = "Đăng ký";
    ViewData["ShowHeader"] = false;
    ViewData["ShowNavbar"] = false;
    ViewData["ShowFooter"] = false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Nền chung cho login/register */
        body {
            background-image: url('/images/nendangnhap.png'); /* Ảnh nền giống login */
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
        }

        /* Bao khung form */
        .auth-container {
            background-color: rgba(255, 255, 255, 0.95);
            max-width: 400px;
            margin: 60px auto;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        .auth-container h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
        }

        .auth-container .form-control {
            border-radius: 8px;
            padding: 10px 12px;
        }

        .auth-container button {
            border-radius: 8px;
            padding: 10px;
            font-weight: 500;
        }

        .auth-container .alert {
            border-radius: 8px;
        }

        .auth-container a {
            color: #0d6efd;
            text-decoration: none;
        }

        .auth-container a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="auth-container">
    <h2>Đăng ký</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <!-- Hiển thị thông báo thành công -->
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">@ViewBag.Success</div>
    }

    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label>Tên đăng nhập</label>
            <input asp-for="Username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Họ tên</label>
            <input asp-for="FullName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Số điện thoại</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Mật khẩu</label>
            <input asp-for="PasswordHash" type="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success w-100">Đăng ký</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Login">Đã có tài khoản? Đăng nhập</a>
    </div>
</div>
