@model DoAn1.Areas.Admin.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin</h4>
        </div>
        <div class="card-body">
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @ViewData["SuccessMessage"]
                </div>
            }
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="UserId" />

                <!-- Username -->
                <div class="mb-3">
                    <label class="form-label">Tên đăng nhập</label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>

                <!-- FullName -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
                    <input asp-for="PasswordHash" class="form-control" type="password" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <input asp-for="Role" class="form-control" readonly />
                    <input type="hidden" asp-for="Role" />
                </div>

                <!-- ReputationScore -->
                <div class="mb-3">
                    <label asp-for="ReputationScore" class="form-label"></label>
                    <input asp-for="ReputationScore" class="form-control" readonly />
                    <input type="hidden" asp-for="ReputationScore" />
                </div>

                <!-- IsActive -->
                <div class="mb-3">
                    <label asp-for="IsActive" class="form-label"></label>
                    <input asp-for="IsActive" class="form-control" readonly />
                    <input type="hidden" asp-for="IsActive" />
                </div>


                <!-- Nút lưu -->
                <div class="d-flex justify-content-between">
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
