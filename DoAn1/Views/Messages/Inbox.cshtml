@model List<DoAn1.Areas.Admin.Models.Message>
@{
    ViewData["Title"] = "Hộp thư đến";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = Context.Session.GetInt32("UserId");
    var unreadCounts = ViewBag.UnreadCounts as Dictionary<int, int>;
}

<style>
    body {
        background-image: url('/images/nen.jpg'); /* Ảnh nền chung */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    .inbox-container {
        max-width: 800px;
        margin: 30px auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .inbox-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .chat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 16px;
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s ease;
    }

        .chat-item:hover {
            background-color: #f0f8ff;
            cursor: pointer;
        }

    .chat-left {
        display: flex;
        flex-direction: column;
    }

    .chat-name {
        font-weight: 600;
        color: #007bff;
    }

    .chat-preview {
        color: #555;
    }

    .chat-time {
        font-size: 12px;
        color: #888;
        white-space: nowrap;
    }

    .empty-inbox {
        text-align: center;
        padding: 40px;
        color: #777;
        font-style: italic;
    }
</style>

<div class="inbox-container">
    <div class="inbox-title">📥 Hộp thư</div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-inbox">Không có cuộc trò chuyện nào.</div>
    }
    else
    {
        @foreach (var message in Model)
        {
            var isSender = message.SenderId == currentUserId;
            var chatUserId = isSender ? message.ReceiverId : message.SenderId;
            var userDisplay = isSender ? message.Receiver?.FullName : message.Sender?.FullName;
            var lastContent = string.IsNullOrEmpty(message.Content) ? "(Không có nội dung)" : message.Content;
            var time = message.SentAt?.ToString("HH:mm dd/MM");

            // Số tin nhắn chưa đọc từ user này
            int unreadCountForUser = 0;
            if (chatUserId != null && unreadCounts != null && unreadCounts.ContainsKey(chatUserId.Value))
            {
                unreadCountForUser = unreadCounts[chatUserId.Value];
            }

            string displayCount = unreadCountForUser > 5 ? "5+" : unreadCountForUser.ToString();

            <a asp-action="Chat" asp-route-userId="@chatUserId" class="text-decoration-none text-dark">
                <div class="chat-item">
                    <div class="chat-left" style="position: relative;">
                        <div class="chat-name">@userDisplay</div>
                        <div class="chat-preview text-truncate" style="max-width: 500px;">
                            @lastContent
                        </div>

                        @if (unreadCountForUser > 0)
                        {
                            <span style="position:absolute; top:0; right:0; background:red; color:white; border-radius:50%; font-size:12px; padding:2px 6px; font-weight:bold;">
                                @displayCount
                            </span>
                        }
                    </div>
                    <div class="chat-time">@time</div>
                </div>
            </a>
        }
    }
</div>
