@{
    ViewData["Title"] = "Đơn Bán Của Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/SellerOrders.css" />
}

<div class="orders-container container mt-4">
    <h2>Đơn bán của bạn</h2>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Ảnh</th>
                <th>Người mua</th>
                <th>Số lượng</th>
                <th>Giá bán</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Áo thun nam</td>
                <td><img src="~/images/item1.jpg" alt="Áo thun nam" class="order-img"></td>
                <td>Nguyễn Văn A</td>
                <td>1</td>
                <td>200,000₫</td>
                <td><span class="badge bg-warning">Chờ giao</span></td>
                <td>
                    <button class="btn btn-success btn-sm">Đánh dấu đã bán</button>
                    <button class="btn btn-primary btn-sm">Sửa</button>
                    <button class="btn btn-danger btn-sm">Xóa</button>
                </td>
            </tr>
            <tr>
                <td>Điện thoại cũ</td>
                <td><img src="~/images/item2.jpg" alt="Điện thoại cũ" class="order-img"></td>
                <td>Trần Thị B</td>
                <td>2</td>
                <td>4,000,000₫</td>
                <td><span class="badge bg-success">Đã bán</span></td>
                <td>
                    <button class="btn btn-primary btn-sm">Sửa</button>
                    <button class="btn btn-danger btn-sm">Xóa</button>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="/Seller/Create" class="btn btn-secondary">Tạo bài đăng mới</a>
        <a href="/" class="btn btn-outline-primary">Về trang chủ</a>
    </div>
</div>
