@model IEnumerable<DoAn1.Areas.Admin.Models.Transaction>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<h2 class="mb-4">📜 Lịch sử đơn hàng</h2>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Sản phẩm</th>
            <th>Người bán</th>
            <th>Số tiền</th>
            <th>Trạng thái</th>
            <th>Ngày đặt</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Product?.Title</td>
                <td>@order.Seller?.FullName</td>
                <td class="text-danger fw-bold">@order.Amount?.ToString("N0") VNĐ</td>
                <td>
                    <span class="badge bg-info">@order.ShippingStatus</span>
                </td>
                <td>@order.TransactionDate?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Track" asp-route-id="@order.TransactionId" class="btn btn-sm btn-info">
                        🔍 Theo dõi
                    </a>
                    <a asp-action="PrintInvoice" asp-route-id="@order.TransactionId" class="btn btn-sm btn-primary">
                        🧾 In hóa đơn
                    </a>

                    @if (order.ShippingStatus == "Pending" || order.ShippingStatus == "Confirmed")
                    {
                        <form asp-action="Cancel" asp-route-id="@order.TransactionId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-warning btn-sm">Hủy</button>
                        </form>
                    }
                    else if (order.ShippingStatus == "Cancelled")
                    {
                        <form asp-action="DeleteOrder" asp-route-id="@order.TransactionId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
