<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Chợ Đồ Cũ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        @if (ViewData["ShowHeader"] == null || (bool)ViewData["ShowHeader"])
        {
            @Html.Partial("_Header")
        }

        @if (ViewData["ShowNavbar"] == null || (bool)ViewData["ShowNavbar"])
        {
            @Html.Partial("_Navbar")
        }
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    @if (ViewData["ShowFooter"] == null || (bool)ViewData["ShowFooter"])
    {
        <footer class="border-top mt-4 py-3 text-center text-muted">
            @Html.Partial("_Footer")
        </footer>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <!-- ... cuối trang trước </body> -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Khởi tạo tooltip Bootstrap
        document.addEventListener("DOMContentLoaded", function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                let query = $(this).val();

                if (query.length === 0) {
                    $("#suggestions").empty();
                    return;
                }

                $.ajax({
                    url: '/Product/SearchSuggestions',
                    data: { term: query },
                    success: function (data) {
                        let suggestionsList = data.map(item => `<li class="list-group-item suggestion-item">${item}</li>`);
                        $("#suggestions").html(suggestionsList.join(""));
                    }
                });
            });

            // Khi click vào gợi ý
            $(document).on("click", ".suggestion-item", function () {
                $("#searchInput").val($(this).text());
                $("#suggestions").empty();
                $("#searchForm").submit();
            });

            // Ẩn gợi ý khi click ra ngoài
            $(document).click(function (e) {
                if (!$(e.target).closest("#searchForm").length) {
                    $("#suggestions").empty();
                }
            });
        });
    </script>

</body>


</html>
