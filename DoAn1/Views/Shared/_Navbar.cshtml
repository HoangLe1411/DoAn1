            <!-- Icon bên phải -->
            <!-- Giỏ hàng -->
            @{
                var currentUserId = Context.Session.GetInt32("UserId");
                int cartCount = 0;
                if (currentUserId != null)
                {
                    cartCount = _context.ShoppingCarts
                    .Where(c => c.UserId == currentUserId && c.IsCheckedOut == false)
                    .Sum(c => c.Quantity ?? 0);
                }
            }
            <a class="btn btn-sm btn-outline-dark position-relative mx-2"
               asp-controller="ShoppingCarts" asp-action="Index"
               data-bs-toggle="tooltip" title="Giỏ hàng">
                <i class="bi bi-cart"></i>
                @if (cartCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.7rem;">
                        @(cartCount > 99 ? "99+" : cartCount.ToString())
                    </span>
                }
            </a>


            <!-- Thông báo -->
            <a class="btn btn-sm btn-outline-dark position-relative mx-2"
               asp-controller="Notifications" asp-action="NewNotifications"
               data-bs-toggle="tooltip" title="Thông báo">
                <i class="bi bi-bell"></i>
                @if (unreadNotificationCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.7rem;">
                        @unreadNotificationCount
                    </span>
                }
            </a>

            <!-- Tin nhắn -->
            <a class="btn btn-sm btn-outline-dark position-relative mx-2"
               asp-controller="Messages" asp-action="Inbox"
               data-bs-toggle="tooltip" title="Tin nhắn">
                <i class="bi bi-envelope"></i>
                @if (unreadMessageCount > 0)
