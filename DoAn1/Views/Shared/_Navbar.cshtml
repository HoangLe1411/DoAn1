@using DoAn1.Areas.Admin.Models
@inject CsdlDoAn1Context _context

@{
    var userId = Context.Session.GetInt32("UserId");
    int unreadNotificationCount = 0;
    int unreadMessageCount = 0;

    if (userId != null)
    {
        unreadNotificationCount = _context.Notifications
            .Where(n => n.UserId == userId && n.IsRead == false)
            .Count();

        // Lấy số lượng tin nhắn chưa đọc mà receiver là user hiện tại
        unreadMessageCount = _context.Messages
            .Where(m => m.ReceiverId == userId && (m.IsRead == false || m.IsRead == null))
            .Count();
    }

    // Logic hiển thị "5+" nếu vượt quá 5
    string messageBadgeText = unreadMessageCount > 5 ? "5+" : unreadMessageCount.ToString();
}


