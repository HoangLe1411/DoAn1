@model IEnumerable<DoAn1.Areas.Admin.Models.Notification>

<h2 class="mb-4">🔔 Thông báo mới</h2>

<div class="card shadow p-3">
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Nội dung</th>
                <th>Thời gian</th>
                <th class="text-center">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsRead == true ? "" : "table-warning")">
                    <td>@item.Title</td>
                    <td>@item.Content</td>
                    <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        @if (item.IsRead != true)
                        {
                            <form asp-action="MarkAsRead" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.NotificationId" />
                                <button type="submit" class="btn btn-sm btn-primary">
                                    @(item.TransactionId != null ? "Xem đơn hàng" : "Đánh dấu đã đọc")
                                </button>
                            </form>
                        }
                        else if (item.TransactionId != null)
                        {
                            <a asp-action="OrderDetails" asp-controller="Transactions" asp-route-id="@item.TransactionId" class="btn btn-sm btn-info">
                                Xem lại đơn
                            </a>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
