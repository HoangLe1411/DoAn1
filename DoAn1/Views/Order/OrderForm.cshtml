@{
    ViewData["Title"] = "Đặt Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/OrderForm.css" />
}

<div class="order-form-container container mt-4">
    <h2>Form Đặt Hàng</h2>

    <form method="post" action="/Order/Submit">
        <table class="table table-bordered mt-3 order-table">
            <thead class="table-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Ảnh</th>
                    <th>Đơn giá</th>
                    <th style="width: 100px;">Số lượng</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Áo thun nam</td>
                    <td>
                        <img src="~/images/item1.jpg" alt="Áo thun nam" class="order-img" style="max-width: 80px;" />
                    </td>
                    <td>200,000₫</td>
                    <td>
                        <input type="number" name="quantity" value="1" min="1" class="form-control" />
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4">
            <label for="paymentMethod" class="form-label fw-bold">Phương thức thanh toán</label>
            <select id="paymentMethod" name="paymentMethod" class="form-select" required>
                <option value="">-- Chọn phương thức thanh toán --</option>
                <option value="cod">Thanh toán khi nhận hàng (COD)</option>
                <option value="bank">Chuyển khoản ngân hàng</option>
                <option value="momo">Ví điện tử Momo</option>
                <option value="paypal">Paypal</option>
            </select>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="/Cart" class="btn btn-secondary">Quay lại giỏ hàng</a>
            <button type="submit" class="btn btn-primary">Đặt hàng</button>
        </div>
    </form>
</div>
