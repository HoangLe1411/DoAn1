@model DoAn1.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/DetailProduct.css" />
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/placeholder.jpg" alt="Ảnh sản phẩm chính" class="img-fluid rounded">
            <div class="d-flex mt-2">
                <img src="~/images/thumb1.jpg" class="img-thumbnail me-2" style="width: 80px; height: 80px;" />
                <img src="~/images/thumb2.jpg" class="img-thumbnail me-2" style="width: 80px; height: 80px;" />
                <img src="~/images/thumb3.jpg" class="img-thumbnail" style="width: 80px; height: 80px;" />
            </div>
        </div>

        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <h4 class="text-danger fw-bold">@Model.Price.ToString("N0") ₫</h4>
            <p><i class="bi bi-geo-alt"></i> @Model.Location</p>

            <button class="btn btn-success w-100 mb-2">Hiện số điện thoại</button>
            <button class="btn btn-primary w-100">Chat với người bán</button>

            <div class="mt-4 p-3 bg-light rounded">
                <h5>@Model.SellerName</h5>
                <p>Phản hồi: 71% | Đã bán: 8 sản phẩm</p>
                <p>Đánh giá: ★★★★★ (2 đánh giá)</p>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3>Mô tả chi tiết</h3>
        <p>@Model.Description</p>

        <h4 class="mt-4">Thông tin chi tiết</h4>
        <table class="table">
            <tr>
                <th>Tình trạng</th>
                <td>@Model.Condition</td>
            </tr>
            <tr>
                <th>Loại sản phẩm</th>
                <td>@Model.Category</td>
            </tr>
        </table>
    </div>

    <div class="mt-5">
        <h3>Bình luận</h3>
        <p>Chưa có bình luận nào.</p>
        <form method="post" asp-action="AddComment">
            <div class="input-group">
                <input type="text" name="Comment" class="form-control" placeholder="Bình luận...">
                <button class="btn btn-primary" type="submit">Gửi</button>
            </div>
        </form>
    </div>
</div>
