@{
    ViewData["Title"] = "Đơn mua của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/BuyerOrders.css" />
}

<div class="orders-container container mt-4">
    <h2>Đơn mua của bạn</h2>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Người bán</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Áo thun nam</td>
                <td><img src="~/images/item1.jpg" alt="Áo thun nam" class="order-img"></td>
                <td>John Nguyễn</td>
                <td>1</td>
                <td>180.000₫</td>
                <td><span class="badge bg-warning">Chờ giao hàng</span></td>
                <td>
                    <button class="btn btn-info btn-sm">Xem chi tiết</button>
                    <button class="btn btn-danger btn-sm">Hủy</button>
                </td>
            </tr>
            <tr>
                <td>Điện thoại cũ</td>
                <td><img src="~/images/item2.jpg" alt="Điện thoại cũ" class="order-img"></td>
                <td>Anna Trần</td>
                <td>2</td>
                <td>3.800.000₫</td>
                <td><span class="badge bg-success">Hoàn tất</span></td>
                <td>
                    <button class="btn btn-info btn-sm">Xem chi tiết</button>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="@Url.Action("All", "Product")" class="btn btn-secondary">Tiếp tục mua sắm</a>
        <a href="/" class="btn btn-outline-primary">Quay về trang chủ</a>
    </div>
</div>
